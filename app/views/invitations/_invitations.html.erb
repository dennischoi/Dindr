<div class="invitation-request-list">
      <ul>
        <% current_user.accepted_invitations.each do |inv| %>

        <li class="invitation-requests">

          <div class='invitation-pic'>
            <%= image_tag User.find(inv.send_user_id).profile_pic.url, class: "invitation-profile-pic"%></div>

          <div class="invitation-info">
          <p><%= inv.date.strftime("%B %d, %Y")  %></p>

          <p><%= User.find(inv.send_user_id).first_name %> has invited you for <%= inv.date_cuisine %></p>
        </div>

          <div class="request-buttons">
            <% if inv.pending == true %>
            <%= button_tag "Accept", class: "accept-request-button", data: {invitationid: inv.id} %>
            <%= button_tag "Decline", class: 'delete-request-button', data: {invitationid: inv.id} %>
            <% else %>
            <%= button_tag "It's a Date!", class: "invitation-accepted-button"%>
            <% end %>
          </div>
        </li>
      <% end %>
      </ul>
    </div>
</div>
