<div class="dindr-date-container">
  <h1> Your Matched Dindr Dates! </h1>

  <div class="outer-wrap-dates">
    <div class="inner-wrap-dates">
      <% if @matched_invites == nil %>
      <% else %>
        <% @matched_invites.each do |inv| %>
        <div class="the-dates">
          <ul>
            <li>
              <div class='invitation-pending-pic'>
                <%= image_tag User.find(inv.send_user_id).profile_pic.url, class: "invitation-pending-profile-pic" %></div>

                <div class="invitation-info">
                  <p>You've matched with <%= User.find(inv.send_user_id).first_name %> for <%= inv.date_cuisine %>!</p>

                  <%= link_to User.find(inv.send_user_id).first_name + "'s Profile", user_path(inv.send_user_id) %>
                </div>

              </li>
            </ul>
        </div>
        <% end %>
      <% end %>
      <% if @sent_matches == nil %>
      <% else %>
        <% @sent_matches.each do |inv| %>
        <div class="the-dates">
          <ul>
            <li>
              <div class='invitation-pending-pic'>
                <%= image_tag User.find(inv.accept_user_id).profile_pic.url, class: "invitation-pending-profile-pic" %></div>

                <div class="invitation-info">
                  <p>You've matched with <%= User.find(inv.accept_user_id).first_name %> for <%= inv.date_cuisine %>!</p>

                  <%= link_to User.find(inv.accept_user_id).first_name + "'s Profile", user_path(inv.accept_user_id) %>
                </div>

              </li>
            </ul>
        </div>
        <% end %>
      <% end %>
    </div>

  </div>
</div>
