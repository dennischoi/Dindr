<nav id="dindr-navbar">

  <div id="home-button">
    <%= link_to image_tag('kirby.jpg'), root_url %>
  </div>

  <% if current_user %>
    <ul id="nav-login">
      <% if current_user.admin? %>
        <li><%= link_to "List of All Pictures", admin_pictures_path %></li>
      <% end %>
    <li><%= link_to "Your Profile", user_path(current_user) %> <%= link_to "Logout", :logout, method: :delete%></li>
  <% else %>
    <li>
      <div class="modal">
        <label for="modal-1">
          <div class="modal-trigger">Sign In</div>
        </label>
        <input class="modal-state" id="modal-1" type="checkbox" />
        <div class="modal-fade-screen">
          <div class="modal-inner">
            <div class="modal-close" for="modal-1"></div>
            <h1>Sign in</h1>
            <p class="modal-intro">Welcome Back!</p>
            <p class="modal-content">

            <%= form_tag create_path do %>
              <div class="field">
                <%= label_tag :email %>
                <%= text_field_tag :email, params[:email] %>
              </div>
              <div class="field">
                <%= label_tag :password %>
                <%= password_field_tag :password %>
              </div>
              <div class="action">
                <%= submit_tag :Submit %>
              </div>
            <% end %>
          </p>
        </div>
      </div>
    </li>

    <li><%= link_to "Sign Up", new_user_path %></li>

      </div>
    </ul>
  <% end %>
</nav>
