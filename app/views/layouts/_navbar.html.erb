<header class="navigation" role="banner">
  <div class="navigation-wrapper">
    <a href="/" class="logo">
      <img src="https://raw.githubusercontent.com/thoughtbot/refills/49db8c0f2f8066c2c3a275781503fe3303a1a9fc/source/images/placeholder.png" alt="Logo Image">
    </a>
    <a href="/" class="navigation-menu-button" id="js-mobile-menu">MENU</a>
    <nav role="navigation">
      <ul id="js-navigation-menu" class="navigation-menu show">

        <% if current_user %>

        <li id="js-navigation-more" class="nav-link more">
         <a>Signed in as: <%= current_user.email %></a>
          <ul class="submenu">
            <li> <%= link_to "My Profile", user_path(current_user) %> </li>
            <li> <%= link_to "Log Out", :logout, method: :delete %> </li>
            <% if current_user.admin? %>
            <li><%= link_to "Show All Pictures", admin_pictures_path %></li>
              </ul>
            </li>
            <% end %>
          </ul>
        </li>
        <% else %>

       <li class="nav-link"><%= link_to "Sign Up", new_user_path %></li>
       <li class="nav-link modal modal-trigger">
         <label for="modal-1"> Sign In </label>
           <input class="modal-state" id="modal-1" type="checkbox" />
             <div class="modal-fade-screen">
               <div class="modal-inner">
                 <div class="modal-close" for="modal-1"></div>
                   <h1>Sign in</h1>
                   <p class="modal-intro">Welcome Back!</p>
                   <p class="modal-content">

                   <%= form_tag create_path do %>
                     <div class="field">
                       <%= label_tag :email %>
                       <%= text_field_tag :email, params[:email] %>
                     </div>
                     <div class="field">
                       <%= label_tag :password %>
                       <%= password_field_tag :password %>
                     </div>
                     <div class="action">
                       <%= submit_tag :Submit %>
                     </div>
                   <% end %>
                   <h1>Forgot Password?</h1>
                   <%= link_to 'Forgot Password', password_resets_path %>
               </p>
             </div>
           </div>
       </li>
      </ul>
      <% end %>
    </nav>
  </div>
</header>
