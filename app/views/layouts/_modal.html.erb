<div class="modal">
<div class="modal-open">
      <div class="modal-fade-screen">
        <div class="modal-inner">
          <div class="modal-close" for="modal-1"></div>
            <h1>Sign in</h1>
            <p class="modal-intro">Welcome Back!</p>
            <p class="modal-content">

            <%= form_tag create_path do %>
              <div class="field">
                <%= label_tag :email %>
                <%= text_field_tag :email, params[:email] %>
              </div>
              <div class="field">
                <%= label_tag :password %>
                <%= password_field_tag :password %>
              </div>
              <div class="action">
                <%= submit_tag :Submit %>
              </div>
            <% end %>
            <h1>Forgot Password?</h1>
            <%= link_to 'Click here to reset your password!', password_resets_path, id: "reset-pass-link" %>
        </p>
      </div>
    </div>
</div>
</div>
