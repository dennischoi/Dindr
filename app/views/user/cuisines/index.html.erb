<div class="container" id="results-page">

    <div class="top-cuis">
      <h1>Here are your top three cuisines... </h1>
      <p style="font-size: 1.4rem">See nearby restaurants that match your cuisines and/or find yourself a Dindr date!</p>
    </div>


    <!-- List Bullet Cards-->

    <div id="results-card-container">

      <ul id="results-card-set">
      <% current_user.top_cats.each do |cat| %>
        <li class="card">
          <div class='icon'><%= image_tag('food-love.png') %></div>
          <h1><%= cat[0] %></h1>
          <p>Mmm Delish!</p>
          <%= button_tag "Find Restaurants", class:"nearby-restaurants", id:"show-rests-button", data: {cuisinelabel:  "#{@cuisines.find_by(name: cat[0]).label}"}  %>

          <!-- <#%= button_to "Find Restaurants", restaurants_path, method: :get, class:"nearby-restaurants", data: {cuisinelabel:  "#{@cuisines.find_by(name: cat[0]).label}"}  %> -->
          <% if current_user.profile_pic? == false %>
            <div class="">
              <%= link_to "change profile pic to dindr", edit_user_path(current_user.id), id:"no-prof"%>
            </div>
          <% else %>
            <%= button_tag "Find A Date!", class:"dindr-dates", id:"show-date-button", data: {cuisinename: cat[0]} %>
          <% end %>
        </li>
        <% end %>
      </ul>
    </div>

    <!-- Play Again Button -->

    <div id="reset-pics-button" >
      <%= button_to "Play Again", :game, method: :get, id:"play-again-button"%>
    </div>

    <div class="result-restaurants-dates" >
    </div>


</div>
