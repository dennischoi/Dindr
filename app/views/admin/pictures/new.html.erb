<h1>Admin Upload Photos</h1>

<%= form_for [:admin, @picture] do |f| %>

  <div class="field">
    <%= f.label :Photo %>
    <%= f.file_field :content %>
  </div>

  <div class ="field">
    <%= f.label :Category %>
    <%= f.select :cuisine_id, options_for_select(@cuisines.collect {|cuisine| [ cuisine.name, cuisine.id ] }) %>
  </div>

  <div class ="field">
    <%= f.label :Tags %>
    <%= f.select :tag_ids, options_for_select(@tags.collect {|t| [ t.name, t.id ] }), {}, multiple: true %>
  </div>

  <div class ="field">
    <%= f.submit "Upload Picture" %>
  </div>

<% end %>
